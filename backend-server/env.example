# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_calendar_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_premium_price_id

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Configuration for Chrome Extension
# Add your Chrome extension ID or use wildcards for development
ALLOWED_ORIGINS=chrome-extension://*,moz-extension://*,http://localhost:3000,http://localhost:5173

# Rate Limiting (adjusted for Chrome extension usage)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging Configuration
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_optional

# Redis Configuration (optional - for session storage)
REDIS_URL=redis://localhost:6379

# Chrome Extension Specific
EXTENSION_ID=your-chrome-extension-id-here

# Subscription Configuration
FREE_QUESTIONS_LIMIT=50
PREMIUM_QUESTIONS_LIMIT=1000
